generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model items {
  id Int @id @unique @default(autoincrement())
  device devices @relation(fields: [device_id], references: [id])
   
  device_id Int
  name String
  // expires DateTime @default(now()) @db.Date
  expires String
}

model users {
  id Int @id @default(autoincrement()) @unique
  name String
  password String
}

model devices {
  id Int @id @default(autoincrement()) @unique
  token String
  user_id Int ?
  code String @unique
  list items[]
}

model device_temp {
  id Int @id @default(autoincrement()) @unique
  code String @unique
  max_age String @ignore
}